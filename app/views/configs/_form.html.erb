<%= form_with model: model do |f| %>
  <%= f.text_field :name, required: true, placeholder: "Staging Worker" %>
  <%= f.text_area :config, required: true, class: "font-mono w-full text-sm", rows: 20, placeholder: "version: v1alpha1&#10;persist: true&#10;machine: # ...&#10;cluster: # ...".html_safe %>

  <%= f.submit "Save" %>
<% end %>