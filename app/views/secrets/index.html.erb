<div class="flex mb-10 justify-between">
  <h1 class="text-4xl">Secrets</h1>
  <%= link_to "New Secret", new_secret_path, class: "text-white rounded bg-mnd-red hover:bg-mnd-red-dark font-semibold p-3 mb-3" %>
</div>

<% @secrets.each do |secret| %>
  <div class="flex mb-5">
    <h2 class="text-xl mr-5"><span class="font-bold"><%= secret.name %></span></h2>
    <%= link_to "Edit", edit_secret_path(secret), class: "text-white text-sm rounded bg-mnd-red hover:bg-mnd-red-dark font-semibold px-3 py-2 mr-2" %>
    <%= button_to icon_trash("w-5"), secret_path(secret), method: :delete, data: { turbo_confirm: "Sure you want to destroy the secret #{secret.name}?" }, class: "text-white text-sm rounded bg-mnd-red hover:bg-mnd-red-dark font-semibold px-3 py-2" %>
  </div>
<% end %>
