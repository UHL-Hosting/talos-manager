<%= form_with model: model do |f| %>
  <%= f.text_field :name, required: true, placeholder: "staging" %>
  <%= f.text_area :secrets, class: "font-mono text-sm", rows: 20, placeholder: "Leave blank to generate a secret via talosctl or paste in the contents of an existing secrets.yaml".html_safe %>

  <%= f.submit "Save" %>
<% end %>